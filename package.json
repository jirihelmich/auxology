{
  "name": "auxology",
  "version": "3.0.0",
  "description": "An application for charting the growth of prematurely born children.",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jirihelmich/auxology.git"
  },
  "keywords": [],
  "author": "Jiri Helmich <jiri@helmich.cz>",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/jirihelmich/auxology/issues"
  },
  "homepage": "https://github.com/jirihelmich/auxology#readme",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "dayjs": "^1.11.13",
    "lovefield": "^2.1.12",
    "lucide-react": "^0.474.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.5.2",
    "react-idle-timer": "^5.7.2",
    "react-router-dom": "^7.2.0",
    "recharts": "^2.15.1"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^35.7.5",
    "electron-builder": "^26.7.0",
    "tailwindcss": "^4.0.7",
    "typescript": "^5.7.3",
    "vite": "^6.1.0"
  },
  "scripts": {
    "dev": "vite",
    "build:renderer": "vite build",
    "start": "npm run build:renderer && electron .",
    "build:mac": "npm run build:renderer && electron-builder --mac",
    "build:win": "npm run build:renderer && electron-builder --win",
    "build": "npm run build:renderer && electron-builder --mac --win"
  },
  "build": {
    "appId": "cz.helmich.auxology",
    "productName": "Auxology",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "dist-renderer/**/*",
      "public/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "public/img/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "public/img/icon.png"
    }
  }
}
